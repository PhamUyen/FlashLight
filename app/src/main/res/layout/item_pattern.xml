<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/color_white"
                android:padding="10dp">

    <ImageView
        android:id="@+id/imvPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/play"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imvPlay"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNamePattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pattern 1"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/tvTimePattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời lượng: liên tục"/>
    </LinearLayout>

    <View
        android:id="@+id/viewRb"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        />
    <RadioButton
        android:id="@+id/rbPattern"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_radiobutton"
        android:button="@android:color/transparent"
        android:checked="true"
        />
</RelativeLayout>